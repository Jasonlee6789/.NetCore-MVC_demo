<div class= "panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>
    
<table class="table table-hover">
    <thead>
        <tr>
            <td>&#x2714;</td>
            <td>Item</td>
            <td>Due</td>
        </tr>
    </thead>

@foreach (var item in Model.Items)
{
        <tr>
            <td>
                <input type="checkbox" class="done-check-box">
            </td>
            <td>@item.Title</td>
            <td>@item.DueAt</td>
        </tr>
}

</table>

</div>
